<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path -%></li>
  <li class="active"><%= @category.name -%></li>
  
</ol>

<h1><%= @category.name -%></h1>

<table class="table table-striped">
  <tbody>
    <% @products.each do |product| -%>
      <tr>
        <td><%= link_to product.product_name, category_product_path(@category, product) -%></td>
      </tr>
    <% end -%>
  </tbody>
</table>

<%= will_paginate @products, class: 'pagination center-block' -%>

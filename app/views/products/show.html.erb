<h1><%= @product.product_name -%></h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 text-right"><strong>Product Id: </strong></div>
    <div class="col-md-10"><%= @product.productid -%></div>
  </div>

  <div class="row">
    <div class="col-md-2 text-right"><strong>Product Name: </strong></div>
    <div class="col-md-10"><%= @product.product_name -%></div>
  </div>

  <div class="row">
    <div class="col-md-2 text-right"><strong>Category: </strong></div>
    <div class="col-md-10"><%= @product.category.name -%></div>
  </div>

  <div class="row">
    <div class="col-md-2 text-right"><strong>Price: </strong></div>
    <div class="col-md-10"><%= number_to_currency(@product.price) -%></div>
  </div>
</div>